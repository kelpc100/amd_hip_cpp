{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: hipcc build active file",
            "command": "/opt/rocm/bin/hipcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o", 
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "/opt/rocm/include",
                "-L",
                "/opt/rocm/lib"

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
